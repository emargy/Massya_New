<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="6dp"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/food_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                tools:src="@drawable/cover"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layoutDirection="rtl"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"
                >

                <ImageButton
                    android:id="@+id/delete_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/ic_delete_cart"
                    android:elevation="6dp"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true"
                    tools:targetApi="lollipop" />
                <ImageButton
                    android:id="@+id/edit_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/ic_edit_cart"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/delete_item"
                    android:layout_alignParentEnd="true"
                    android:elevation="6dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    tools:targetApi="lollipop"/>



            </RelativeLayout>
        </FrameLayout>



        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_height="wrap_content"
                tools:text="naram"/>

            <TextView
                android:id="@+id/price_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:gravity="end"
                android:textSize="16sp"
                tools:text="0 S.P"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="#000000"
            android:textSize="14sp"
            tools:text="0 S.P"
            />

        <LinearLayout
            android:id="@+id/option_one"
            android:visibility="gone"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/description_text2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_height="wrap_content"
                tools:text="naram"/>

            <TextView
                android:id="@+id/price_text2"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:gravity="end"
                android:textSize="16sp"
                tools:text="0 S.P"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_tow"
            android:visibility="gone"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/description_text3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_height="wrap_content"
                tools:text="naram"/>

            <TextView
                android:id="@+id/price_text3"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:gravity="end"
                android:textSize="16sp"
                tools:text="0 S.P"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/option_three"
            android:visibility="gone"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/description_text4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_height="wrap_content"
                tools:text="naram"/>

            <TextView
                android:id="@+id/price_text4"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:gravity="end"
                android:textSize="16sp"
                tools:text="0 S.P"
                android:layout_height="wrap_content" />

        </LinearLayout>






    </LinearLayout>

</androidx.cardview.widget.CardView>
